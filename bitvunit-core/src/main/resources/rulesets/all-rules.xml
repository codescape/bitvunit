<?xml version="1.0" encoding="utf-8"?>
<ruleset xmlns="http://bitvunit.codescape.de/ruleset/1.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://bitvunit.codescape.de/ruleset/1.0 http://bitvunit.codescape.de/xsd/ruleset-1.0.xsd">

    <description>Set of all rules currently supported by the framework.</description>

    <!-- Applets -->
    <rule class="de.codescape.bitvunit.rule.applets.AlternativeTextForAppletRule"/>

    <!-- Forms -->
    <rule class="de.codescape.bitvunit.rule.forms.LabelContainsTextRule"/>
    <rule class="de.codescape.bitvunit.rule.forms.LabelForInputFieldRule"/>
    <rule class="de.codescape.bitvunit.rule.forms.LabelForSelectTagRule"/>
    <rule class="de.codescape.bitvunit.rule.forms.LabelForTextareaRule"/>
    <rule class="de.codescape.bitvunit.rule.forms.LabelWithoutFormElementRule"/>
    <rule class="de.codescape.bitvunit.rule.forms.UniqueLabelForFormElementRule"/>

    <!-- Frames -->
    <rule class="de.codescape.bitvunit.rule.frames.TitleForFrameRule"/>
    <rule class="de.codescape.bitvunit.rule.frames.TitleForInlineFrameRule"/>

    <!-- Images -->
    <rule class="de.codescape.bitvunit.rule.images.AlternativeTextForAreaOfImageMapRule"/>
    <rule class="de.codescape.bitvunit.rule.images.AlternativeTextForImageRule"/>
    <rule class="de.codescape.bitvunit.rule.images.AvoidServerSideImageMapRule"/>

    <!-- Interactions -->
    <rule class="de.codescape.bitvunit.rule.interactions.AvoidMetaRefreshRule"/>

    <!-- Lists -->
    <rule class="de.codescape.bitvunit.rule.lists.DefinitionListContainsItemsRule"/>
    <rule class="de.codescape.bitvunit.rule.lists.OrderedListContainsListItemsRule"/>
    <rule class="de.codescape.bitvunit.rule.lists.UnorderedListContainsListItemsRule"/>

    <!-- Tables -->
    <rule class="de.codescape.bitvunit.rule.tables.CaptionTextForTableRule"/>
    <rule class="de.codescape.bitvunit.rule.tables.TableHeaderContainsTextRule"/>
    <rule class="de.codescape.bitvunit.rule.tables.TableHeaderForTableColumnRule"/>

    <!-- Text -->
    <rule class="de.codescape.bitvunit.rule.text.AvoidBlinkTextRule"/>
    <rule class="de.codescape.bitvunit.rule.text.AvoidBoldTagRule"/>
    <rule class="de.codescape.bitvunit.rule.text.AvoidItalicTagRule"/>
    <rule class="de.codescape.bitvunit.rule.text.AvoidMarqueeTextRule"/>
    <rule class="de.codescape.bitvunit.rule.text.HeadersInCorrectOrderRule"/>
    <rule class="de.codescape.bitvunit.rule.text.LanguageForHtmlTagRule"/>
    <rule class="de.codescape.bitvunit.rule.text.TitleForAbbreviationTagRule"/>
    <rule class="de.codescape.bitvunit.rule.text.TitleForAcronymTagRule"/>

</ruleset>